# API Keys (Required)
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
CHROMA_DB_PATH=./chroma_db
COLLECTION_NAME=collection

# Redis Configuration (for Celery task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# API Configuration
API_BASE_URL=http://127.0.0.1:8000

# Model Configuration (optional - defaults shown)
# EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2
# CROSS_ENCODER_MODEL_NAME=cross-encoder/ms-marco-MiniLM-L-6-v2
# LLM_MODEL_NAME=llama-3.1-8b-instant

# Retrieval Configuration
# Enable hybrid search (BM25 + Vector). Requires more memory as it loads all documents.
ENABLE_HYBRID_SEARCH=false
# Weights for hybrid search (should sum to 1.0)
BM25_WEIGHT=0.3
VECTOR_WEIGHT=0.7
# Diversity filter to reduce redundant results
USE_DIVERSITY_FILTER=true
DIVERSITY_THRESHOLD=0.85

# For Docker deployment (override these in docker-compose.yml)
# REDIS_HOST=redis
# CHROMA_DB_PATH=/app/chroma_db
